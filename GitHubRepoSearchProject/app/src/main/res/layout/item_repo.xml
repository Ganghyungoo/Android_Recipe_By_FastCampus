<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/repoNameTextView"
        android:textSize="20sp"
        tools:text="sad;lfkjas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#8A8383"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repoNameTextView"
        android:layout_marginTop="5dp"
        tools:text="asdfasdfasdfasdfasdf"/>

    <ImageView
        android:id="@+id/starImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/baseline_star_border_24"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
        app:layout_constraintStart_toStartOf="@+id/repoNameTextView"/>

    <TextView
        android:id="@+id/starCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8A8383"
        tools:text="20"
        android:layout_marginLeft="2dp"
        app:layout_constraintStart_toEndOf="@+id/starImageView"
        app:layout_constraintTop_toTopOf="@+id/starImageView"
        app:layout_constraintBottom_toBottomOf="@+id/starImageView"/>

    <ImageView
        android:id="@+id/forkImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_fork_right_24"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/starImageView"
        app:layout_constraintBottom_toBottomOf="@+id/starImageView"
        app:layout_constraintStart_toEndOf="@+id/starCountTextView"/>

    <TextView
        android:id="@+id/forkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8A8383"
        tools:text="20"
        android:layout_marginLeft="2dp"
        app:layout_constraintStart_toEndOf="@+id/forkImageView"
        app:layout_constraintTop_toTopOf="@+id/starImageView"
        app:layout_constraintBottom_toBottomOf="@+id/starImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>